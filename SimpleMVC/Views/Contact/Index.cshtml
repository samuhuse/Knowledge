@{      ViewData["Title"] = "Index";
}


<h1>Contacts</h1>

<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Contact List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary text-white" href="Contact/Edit"><i class="fas fa-plus"></i> &nbsp; Create New Contact</a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:#cde8e2" class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src ="~/js/ContactIndex.js"></script>
}